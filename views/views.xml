<!-- Odoo_Module/views/views.xml -->
<odoo>
    <!-- Vue de liste des commandes -->
    <record id="view_command_list" model="ir.ui.view">
        <field name="name">gestion.commande.list</field>
        <field name="model">gestion.commande</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="order_date"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>

    <!-- Vue de formulaire pour créer/modifier une commande -->
    <record id="view_command_form" model="ir.ui.view">
        <field name="name">gestion.commande.form</field>
        <field name="model">gestion.commande</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="order_date"/>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action de menu pour accéder à la gestion des commandes -->
    <menuitem id="menu_gestion_commandes" name="Gestion des Commandes" sequence="10"/>
    <menuitem id="menu_commandes" name="Commandes" parent="menu_gestion_commandes" action="action_commandes" sequence="10"/>

    <!-- Action pour afficher la vue en liste -->
    <record id="action_commandes" model="ir.actions.act_window">
        <field name="name">Commandes</field>
        <field name="res_model">gestion.commande</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
